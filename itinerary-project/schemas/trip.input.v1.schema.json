{
  "title": "Trip",
  "type": "object",
  "required": ["name", "dates","preferences", "destinations"],
  "properties": {
    "name": { "type": "string" },

    "dates": {
      "type": "object",
      "required": ["start", "end"],
      "properties": {
        "start": { "type": "string" },
        "end":   { "type": "string" }
      }
    },

    "timezone": { "type": "string" },

    "preferences": {
      "type": "object",
      "required": ["pace"],
      "properties": {
        "pace": { "type": "string", "enum": ["Relaxed", "Balanced", "Packed"] }
      }
    },

    "destinations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "placeId", "name", "places"],
        "properties": {
          "id": { "type": "string" },
          "placeId": { "type": "string" },
          "name": { "type": "string" },

          "dates": {
            "type": "object",
            "required": ["start", "end"],
            "properties": {
              "start": { "type": "string" },
              "end":   { "type": "string" }
            }
          },

          "accommodation": {
            "type": "object",
            "required": ["id", "placeId", "name", "address", "location"],
            "properties": {
              "id": { "type": "string" },
              "placeId": { "type": "string" },
              "name": { "type": "string" },
              "address": { "type": "string" },
              "location": {
                "type": "object",
                "required": ["lat", "lng"],
                "properties": {
                  "lat": { "type": "number" },
                  "lng": { "type": "number" }
                }
              },
              "checkInTime": { "type": "string" },
              "checkOutTime": { "type": "string" }
            }
          },

          "places": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "placeId", "name", "address", "location"],
              "properties": {
                "id": { "type": "string" },
                "placeId": { "type": "string" },
                "name": { "type": "string" },
                "address": { "type": "string" },
                "location": {
                  "type": "object",
                  "required": ["lat", "lng"],
                  "properties": {
                    "lat": { "type": "number" },
                    "lng": { "type": "number" }
                  }
                },
                "fixed": {
                  "type": "object",
                  "required": ["start"],
                  "properties": {
                    "start": { "type": "string" },
                    "end": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },

    "meta": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "source":  { "type": "string" },
        "createdAt": { "type": "string" }
      }
    }
  }
}